<ui:UiPage
    x:Class="SportsTimingSystem.UI.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsTimingSystem.UI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SportsTimingSystem.UI.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:Background="{DynamicResource ApplicationBackgroundBrush}"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">

        <StackPanel Margin="10,0,10,0" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">Nr. zawodnika</TextBlock>
                        <TextBox MinWidth="100" Margin="10,0,0,0" />
                    </StackPanel>
                    <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">Czas</TextBlock>
                        <TextBox MinWidth="100" Margin="10,0,0,0" />
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button>Zapisz</Button>
                    <Button Margin="5,0,0,0">dsq</Button>
                    <Button Margin="5,0,0,0">dnf</Button>
                    <Button Margin="5,0,0,0">dns</Button>
                </StackPanel>
            </Grid>

            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                <TextBlock FontSize="17">Excel</TextBlock>
                <ui:DataGrid
                    Grid.Row="1"
                    Margin="0,5,0,0"
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding ViewModel.Results, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:DashboardPage}, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            MinWidth="45"
                            Binding="{Binding Position}"
                            Header="Poz." />
                        <DataGridTextColumn
                            MinWidth="45"
                            Binding="{Binding RunnerNumber}"
                            Header="Nr." />
                        <DataGridTextColumn
                            MinWidth="200"
                            Binding="{Binding FullName}"
                            Header="Nazwisko i Imię" />
                        <DataGridTextColumn
                            MinWidth="80"
                            Binding="{Binding Club}"
                            Header="Klub" />
                        <DataGridTextColumn
                            MinWidth="70"
                            Binding="{Binding FirstRun}"
                            Header="Bieg 1" />
                        <DataGridTextColumn
                            MinWidth="70"
                            Binding="{Binding SecondRun}"
                            Header="Bieg 2" />
                        <DataGridTextColumn
                            MinWidth="80"
                            Binding="{Binding Duration, StringFormat='mm:ss.ff'}"
                            Header="Czas" />
                        <DataGridTextColumn
                            MinWidth="80"
                            Binding="{Binding TimeLoss}"
                            Header="Strata" />
                    </DataGrid.Columns>
                </ui:DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:UiPage>