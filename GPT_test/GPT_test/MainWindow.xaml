<Window x:Class="GPT_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPT_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ComboBox x:Name="cmbSerialPorts" Grid.Row="0" Grid.Column="0" Margin="10" />
        <Button Content="Connect" Grid.Row="0" Grid.Column="1" Margin="10" Click="Button_Click" />
        <TextBox x:Name="txtResponse" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" />
    </StackPanel>
</Window>
